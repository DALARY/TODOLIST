{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block body %}
    <h1>Todo index</h1>
    <a href="{{ path('app_todo_done')}}">Afficher les tâches à faire</a>
    {{ form_start(filterForm) }}
        {{ form_widget(filterForm) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(filterForm) }}

    <table class="table">
        <thead>
            <tr>
                <th><a href='/todo?orderby=id&order={{order}}'>Id</a></th>
                <th><a href='/todo?orderby=name&order={{order}}'>Name</a></th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td>{{ todo.id }}</td>
                <td>{{ todo.name }}</td>
                <td>{{ todo.description }}</td>
                <td>
                    <a href="{{ path('app_todo_show', {'id': todo.id}) }}">show</a>
                    <a href="{{ path('app_todo_edit', {'id': todo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_todo_new') }}">Create new</a>
{% endblock %}
